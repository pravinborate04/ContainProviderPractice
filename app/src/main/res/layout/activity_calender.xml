<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_calender"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.firebasepractice.pravin103082.contentproviderpractice.calender.CalenderActivity">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="setup event" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <TextView
                        style="@style/Base.TextAppearance.AppCompat.Subhead"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:text="Start" />

                    <EditText
                        android:id="@+id/startYear"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="year"
                        android:inputType="number" />

                    <EditText
                        android:id="@+id/startMonth"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="Month"
                        android:inputType="number" />

                    <EditText
                        android:id="@+id/startDate"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="Date"
                        android:inputType="number" />

                    <EditText
                        android:id="@+id/startHourOfDate"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="HourOfDate"
                        android:inputType="number" />

                    <EditText
                        android:id="@+id/startMinute"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="Minute"
                        android:inputType="number" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"

                    android:layout_weight="1"
                    android:orientation="vertical">

                    <TextView
                        style="@style/Base.TextAppearance.AppCompat.Subhead"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:text="End" />

                    <EditText
                        android:id="@+id/endYear"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="year"
                        android:inputType="number" />

                    <EditText
                        android:id="@+id/endMonth"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="Month"
                        android:inputType="number" />

                    <EditText
                        android:id="@+id/endDate"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="Date"
                        android:inputType="number" />

                    <EditText
                        android:id="@+id/endHourOfDate"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="HourOfDate"
                        android:inputType="number" />

                    <EditText
                        android:id="@+id/endMinute"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="Minute"
                        android:inputType="number" />
                </LinearLayout>
            </LinearLayout>

            <EditText
                android:id="@+id/edtEventTitle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Event Title" />

            <Button
                android:id="@+id/btnAddEvent"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Add Event"
                android:textAllCaps="false" />

            <Button
                android:id="@+id/btnShowEvent"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Show Events"
                android:textAllCaps="false" />

            <EditText
                android:inputType="number"
                android:id="@+id/deleteEventId"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="delete event id"/>


            <Button
                android:id="@+id/btnDeleteEvent"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Delete Event"
                android:textAllCaps="false" />
            <Button
                android:id="@+id/btnShowAllEvents"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Show all Events"
                android:textAllCaps="false"/>
        </LinearLayout>
    </ScrollView>
</LinearLayout>
